<!-- New Account Registration -->
<h1>Registration Page</h1>
<form action="/register" method="post" class="form-horizontal">
  <div class="form-group form-group-lg">
    <label class="col-xs-12 col-sm-3 col-sm-offset-1 control-label" for="user_username">Username</label>
    <div class="col-xs-12 col-sm-5">
      <input type="text" class="form-control" id="user_username" name="user[username]" required>
    </div>
  </div>

  <div class="form-group form-group-lg">
    <label class="col-xs-12 col-sm-3 col-sm-offset-1 control-label" for="user_email">Email</label>
    <div class="col-xs-12 col-sm-5">
      <input type="email" class="form-control" id="user_email" name="user[email]" required>
    </div>
  </div>

  <div class="form-group form-group-lg">
    <label class="col-xs-12 col-sm-3 col-sm-offset-1 control-label" for="user_password">Password</label>
    <div class="col-xs-12 col-sm-5">
      <input type="password" class="form-control" id="user_password" name="user[password]" required>
    </div>
  </div>

  <div class="form-group form-group-lg">
    <label class="col-xs-12 col-sm-3 col-sm-offset-1 control-label" for="profile_name">Name</label>
    <div class="col-xs-12 col-sm-5">
      <input type="text" class="form-control" id="profile_name" name="profile[name]" required>
    </div>
  </div>

  <div class="form-group form-group-lg">
    <label class="col-xs-12 col-sm-3 col-sm-offset-1 control-label">Gender</label>
    <div class="col-xs-12 col-sm-5">
          <label class="radio-inline">
      <input type="radio" name="profile[gender]" id="profile_gender_male" value="male"> Male
    </label>
    <label class="radio-inline">
      <input type="radio" name="profile[gender]" id="profile_gender_female" value="female"> Female
    </label>
    </div>
  </div>

  <div class="form-group">
    <label for="profile_country_id" class="control-label col-xs-12">Country</label>
    <div class="col-xs-12 col-sm-4">
      <select class="form-control" id="profile_country_id" name="profile[country_id]">
        <% @countries.each do |country| %>
          <option value="<%= country.id %>"><%= country.name %></option>
        <% end %>
      </select>
    </div>
  </div>

  <div class="form-group">
    <label for="profile_native_language_id" class="control-label col-xs-12">Native Language</label>
    <div class="col-xs-12 col-sm-4">
      <select class="form-control" id="profile_native_language_id" name="native_language_id">
        <% @languages.each do |language| %>
          <option value="<%= language.id %>"><%= language.name %></option>
        <% end %>
      </select>
    </div>
  </div>

  <div class="form-group">
    <label for="profile_foreign_language_id" class="control-label col-xs-12">Foreign Language</label>
    <div class="col-xs-12 col-sm-4">
      <select class="form-control" id="profile_foreign_language_id" name="foreign_language_id">
        <% @languages.each do |language| %>
          <option value="<%= language.id %>"><%= language.name %></option>
        <% end %>
      </select>
    </div>
  </div>

  <div class="col-xs-12 col-sm-offset-4">
    <button type="submit" class="btn btn-primary">Submit</button>
  </div>
</form>

<!-- All diary entries -->

<h1>Diary Entries</h1>

<ul class="list-group">
	<% @diary_entries.each do |diary_entry| %>
		<% p diary_entry %>
  	<li class="list-group-item">
  		<a href="/diaries/<%= diary_entry.diary.id %>/diary_entries/<%= diary_entry.id %>"><%= diary_entry.title %></a> by <a href="/profiles/<%= diary_entry.author.id %>"><%= diary_entry.author.name %></a>
  		<span class="badge"><%= diary_entry.likes.count %> <span class="glyphicon glyphicon-thumbs-up" aria-hidden="true"></span></button>&nbsp;
  		<span class="badge"><%= diary_entry.corrections.count %> <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></button>
  	</li>
  <% end %>
</ul>

<!-- For the page numbers -->
<%= will_paginate @diary_entries, renderer: BootstrapPagination::Sinatra %>
